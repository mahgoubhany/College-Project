<!-- //old student register code  -->
<%- include('partials/student_registerheader') %>
<form action="/student_register" method="post">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home">EIC College</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/student_login">Student Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/staff_login">Staff Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="col-md-7 col-lg-6">
      <div class="card p-4">
            <h3 class="mb-3 text-success">Student Registration</h3>
              <div class="mb-3">
                <label for="reg-email" class="form-label">Email</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                  <input type="email" class="form-control" name="username" id="reg-email" placeholder="Enter your email" required>
                </div>
              </div>
              <div class="mb-3">
                <label for="reg-password" class="form-label">Password</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-lock"></i></span>
                  <input type="password" class="form-control" name="password" id="reg-password" placeholder="Create a password" required autocomplete="off">
                </div>
              </div>
              <div class="mb-3">
                <label for="reg-firstname" class="form-label">First Name</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person"></i></span>
                  <input type="text" class="form-control" name="fname" id="reg-firstname" placeholder="Enter your first name" required autocomplete="off">
                </div>
              </div>
              <div class="mb-3">
                <label for="reg-lastname" class="form-label">Last Name</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person"></i></span>
                  <input type="text" class="form-control" name="lname" id="reg-lastname" placeholder="Enter your last name" required autocomplete="off">
                </div>
              </div>
              <button type="submit" class="btn btn-success w-100 mt-2">Register</button>
            </div>
          </div>
        </div>
      </form>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <%- include('partials/footer') %>